@model leave_management.Models.CreateLeaveAllocationVM

@{
    ViewData["Title"] = "Index";
}

<h1>Leave Allocations</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            
            <th>
               Leave Types
            </th>
            
            <th>
                Action
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.LeaveTypes) {
        <tr>
            
            <td>
                @Html.DisplayFor(modelItem => item.Name)
           
            <td>
                @*@Html.ActionLink("Allocate To Employees", "SetLeave", new {  id=item.Id  }, new { @class = "btn btn-success" })*@
                <a class="btn btn-outline-success" asp-action="SetLeave" asp-route-id="@item.Id">
                    <i class="fa fa-pencil"></i> Allocate To Employees
                </a>

 </tr>
}
    </tbody>
</table>
